<odoo>
    <data>
        <record id="refund_dana_form_view" model="ir.ui.view">
            <field name="name">refund.dana.form.view</field>
            <field name="model">refund.dana</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" confirm="This process will affect the balance and journal !" groups="sale_custome.accounting_custom_group" type="object" invisible="id == False or state != 'posted'"/>
                        <button name="action_post" string="Posted" type="object" class="oe_highlight" invisible="id == False or state != 'draft'"/>
                    </header>
                    <sheet>
                        <div class="o_lead_opportunity_form_inline_fields">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1" invisible="id == False"/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="user_id" string="Responsible" domain="[('id','=', uid)]" required="1" readonly="1"/>
                                <field name="employee_id" string="Employee" required="1" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="dana_id" string="No Permintaan" readonly="1" required="1"/>
                                <field name="date" required="1" readonly="state == 'posted'"/>
                                <field name="amount" readonly="1"/>
                                <field name="source_account" readonly="1"/>
                                <field name="dest_account" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="refund_dana_tree_view" model="ir.ui.view">
            <field name="name">refund.dana.tree.view</field>
            <field name="model">refund.dana</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="dana_id" string="Permintaan Dana Ref"/>
                    <field name="user_id" string="Responsible"/>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="state"
                            decoration-warning="state == 'draft'"
                            decoration-success="state == 'posted'"
                            widget="badge"
                            optional="show"/>
                </tree>
            </field>
        </record>

        <record id="action_refund_dana" model="ir.actions.act_window">
            <field name="name">Refubd</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">refund.dana</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_domain', '=', 1)]</field>
        </record>

        <menuitem id="menu_refund_dana"
                name="Refund"
                action="custom_account.action_refund_dana"
                parent="custom_account.kas_kecil"
                sequence="5"/>
    </data>
</odoo>