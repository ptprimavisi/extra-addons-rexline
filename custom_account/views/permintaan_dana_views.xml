<odoo>
    <data>
        <record id="general_manager_wizard_form_view" model="ir.ui.view">
            <field name="name">general.manager.wizard.form</field>
            <field name="model">general.manager</field>
            <field name="arch" type="xml">
                <form string="General Manager Position" create='0'>
                    <group>
                        <field name="general_manager"/>
                    </group>
                    <footer>
                        <button name="update" string="Update" type="object" class="btn-primary oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_job_tittle_gm" model="ir.actions.act_window">
            <field name="name">General Manager</field>
            <field name="res_model">general.manager</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_job_tittle_gm"
                name="General Manager"
                parent="hr.menu_config_employee"
                action="action_job_tittle_gm"
                sequence="20"/>

        <record id="coo_wizard_form_view" model="ir.ui.view">
            <field name="name">coo.coo.wizard.form</field>
            <field name="model">coo.coo</field>
            <field name="arch" type="xml">
                <form string="Chief Operating Officer Position" create='0'>
                    <group>
                        <field name="coo"/>
                    </group>
                    <footer>
                        <button name="update" string="Update" type="object" class="btn-primary oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_job_tittle_coo" model="ir.actions.act_window">
            <field name="name">Chief Operating Officer</field>
            <field name="res_model">coo.coo</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_job_tittle_coo"
                name="Chief Operating Officer"
                parent="hr.menu_config_employee"
                action="action_job_tittle_coo"
                sequence="20"/>

        <record id="permintaan_dana_form_view" model="ir.ui.view">
            <field name="name">permintaan.dana.form.view</field>
            <field name="model">permintaan.dana</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,transfer"/>
                        <button name="action_confirm" string="Confirm" confirm="Do you want to confirm?" type="object" class="oe_highlight" invisible="id == False or state != 'draft'"/>
<!--                        <button name="action_transfer" string="Transfer" confirm="Do you want to transfer?" groups="sale_custome.accounting_custom_group" type="object" class="oe_highlight" invisible="id == False or state not in ['confirm','transfer'] or transfer_status == 'Transfer'"/>-->
                        <button name="action_transfer" string="Transfer" confirm="Do you want to transfer?" groups="sale_custome.accounting_custom_group" type="object" class="oe_highlight" invisible="id == False or state not in ['confirm','transfer'] or finance_state == 'close'"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" confirm="This process will affect the balance and journal !" groups="sale_custome.accounting_custom_group" type="object" invisible="id == False or state != 'transfer'"/>
                        <button name="action_realisasi" string="Realisasi" confirm="Do you want to create expense report?" type="object" invisible="state != 'transfer'"/>
                        <button name="action_refund" string="Refund" confirm="Do you want to refund?" type="object" invisible="state != 'transfer'"/>
                        <button name="action_print_report" string="Print" type="object" invisible="id == False"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_count_realisasi"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-dollar">
                                    <field name="count_realisasi" widget="statinfo" string="Realisasi"/>
                            </button>
                            <button name="action_count_refund"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-dollar">
                                    <field name="count_refund" widget="statinfo" string="Refund"/>
                            </button>
                        </div>
                        <div class="o_lead_opportunity_form_inline_fields">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1" invisible="id == False"/>
                                </h1>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="project"/>
                                <field name="user_id" string="Responsible" domain="[('id', '=', uid)]" required="1" readonly="state == 'transfer'"/>
<!--                                <field name="pic_user" string="PIC" required="1" readonly="state == 'transfer'"/>-->
                                <field name="department" readonly="state == 'transfer'" required="1"/>
                                <field name="advance_type" string="Advance Type" readonly="state == 'transfer'" required="1"/>
                                <field name="employee_id" string="PIC" required="1" domain="[('department_id', '=', department)]" readonly="department == False or state == 'transfer'"/>
                                <field name="description" required="1" readonly="state == 'transfer'"/>
                                <field name="bank_note" required="1"/>
                                <field name="realisasi_status" readonly="1"/>
                                <field name="finance_state" string="Finance Response" groups="sale_custome.accounting_custom_group"/>
                            </group>
                            <group>
                                <field name="date_request" required="1" readonly="state == 'transfer'"/>
                                <field name="saldo" string="Saldo" readonly="1"/>
                                <field name="manager_approve" readonly="1" invisible="1"/>
                                <field name="gm_approve" readonly="1" invisible="1"/>
                                <field name="coo_approve" readonly="1" invisible="1"/>
                                <field name="source_account" groups="sale_custome.accounting_custom_group" readonly="state == 'transfer'"/>
                                <field name="journal_id" groups="sale_custome.accounting_custom_group" readonly="state == 'transfer'"/>
                                <field name="date_journal" string="Accounting Date" required="state == 'confirm'" groups="sale_custome.accounting_custom_group"/>
                                <field name="outstanding"/>
                                <field name="transfer_status"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="dana_line" readonly="state == 'transfer'">
                                    <tree editable="bottom">
                                        <field name="description" required="1"/>
                                        <field name="amount" required="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Transfer Info">
                                <field name="transfer_ids" readonly="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="date_transfer" string="Transfer Date"/>
                                        <field name="amount" string="Amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group col="12" class="oe_invoice_lines_tab">
                            <group colspan="8">
                            <!--<field name="narration" placeholder="Terms and Conditions" class="oe_inline text-break" nolabel="1"/>-->
                            </group>
                            <group colspan="4">
                                <group class="oe_subtotal_footer oe_right" >
                                    <field name="total_amount" widget="monetary" string="Total Amount" readonly="1"/>
                                    <field name="nominal_transfer" widget="monetary" string="Total Transfer Amount" readonly="1"/>
                                </group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="seq_inquiry" model="ir.sequence">
            <field name="name">Inquiry Inquiry</field>
            <field name="code">INQ</field>
            <field name="prefix">CRF/REX/%(y)s/000</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_boq" model="ir.sequence">
            <field name="name">BOQ</field>
            <field name="code">BOQ</field>
            <field name="prefix">BOQ/%(y)s/000</field>
            <field name="company_id" eval="False"/>
        </record>


        <record id="seq_mrf" model="ir.sequence">
            <field name="name">Material Request</field>
            <field name="code">MRF</field>
            <field name="prefix">MRF/%(y)s/000</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_payment_request" model="ir.sequence">
            <field name="name">Payment Request</field>
            <field name="code">PR</field>
            <field name="prefix">PR/%(y)s/000</field>
            <field name="company_id" eval="False"/>
        </record>


        <record id="seq_permintaan_dana" model="ir.sequence">
            <field name="name">Permintaan dana</field>
            <field name="code">DANA</field>
            <field name="prefix">AR-%(year)s%(month)s%(day)s00</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_realisasi_dana" model="ir.sequence">
            <field name="name">Realisasi Dana</field>
            <field name="code">REALISASI</field>
            <field name="prefix">ER-%(year)s%(month)s%(day)s00</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="seq_refund_dana" model="ir.sequence">
            <field name="name">Refund Dana</field>
            <field name="code">REFUND</field>
            <field name="prefix">REFUND/%(y)s/000</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="permintaan_dana_tree_view" model="ir.ui.view">
            <field name="name">permintaan.dana.tree.view</field>
            <field name="model">permintaan.dana</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_id" string="Responsible"/>
                    <field name="employee_id"/>
                    <field name="date_request"/>
                    <field name="total_amount"/>
                    <field name="nominal_transfer" string="Total Transfer Amount"/>
                    <field name="state"
                            decoration-warning="state == 'confirm'"
                            decoration-success="state == 'transfer'"
                            widget="badge"
                            optional="show"/>
<!--                    <field name="due_date" string="Scheduled Date" optional="show" widget="remaining_days" readonly="1"/>-->
<!--                    <field name="state_count_rfq" string="RFQ Status" widget="boolean_toggle"/>-->
                    <field name="realisasi_status"
                            decoration-danger="realisasi_status == 'To Realisasi'"
                            decoration-warning="realisasi_status == 'Draft Realisasi'"
                            decoration-success="realisasi_status == 'Realisasi'"
                            widget="badge"
                            optional="show"/>
                    <field name="finance_state" string="Finance Response"
                            decoration-warning="finance_state == 'waiting'"
                            decoration-success="finance_state == 'approve'"
                            decoration-danger="finance_state == 'refused'"
                            widget="badge"
                            optional="show"/>
                </tree>
            </field>
        </record>

        <record id="hr_department_inherith_view" model="ir.ui.view">
            <field name="name">hr.department.inherit.view</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="code" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="action_permintaan_dana" model="ir.actions.act_window">
            <field name="name">Permintaan Dana</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">permintaan.dana</field>
            <field name="domain">[('user_domain', '=', 1)]</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="kas_kecil" name="Cash Advance" sequence="10"/>
        <menuitem id="menu_permintaan_dana"
                name="Advance Request"
                action="custom_account.action_permintaan_dana"
                parent="custom_account.kas_kecil"
                sequence="1"/>
    </data>
</odoo>