<!--                                <table class="table" style="width: 90%; border-collapse: collapse; font-size: 12px; ">-->
<!--                                    <tbody>-->
<!--                                        <tr style="height: 77px;">-->
<!--                                            <td style="text-align: center; border: 1px solid black; vertical-align: middle;"><strong>MANAGEMENT</strong></td>-->
