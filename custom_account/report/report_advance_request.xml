<odoo>
    <template t-name="custom_account.report_advance_request">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                <div style="font-family: Calibri, sans-serif;">
                    <h4 style="font-size: 16px; text-align: center; padding-top: 10px !important;">
                       <strong>ADVANCE REQUEST</strong>
                    </h4>
                    <h4 style="font-size: 16px; text-align: center; padding-top: 10px !important;">
                       <t t-esc="docs.name or 'Unknow'"/>
                    </h4>
                </div>

                <div class="page" style="font-family: Calibri, sans-serif; ">
                    <table class="table" style="width: 40%; font-size: 12px; border: none; ">
                        <tr>
                            <td style="border: none;">DATE</td>
                            <td style="border: none;">:</td>
                            <td style="border: none;"><t t-esc="docs.date_request or 'Unknow'"/></td>
                        </tr>
                        <tr>
                            <td style="border: none;">REQUESTER</td>
                            <td style="border: none;">:</td>
                            <td style="border: none;"><t t-esc="docs.employee_id.name or 'Unknow'"/></td>
                        </tr>
                        <tr>
                            <td style="border: none;">DEPARTMENT</td>
                            <td style="border: none;">:</td>
                            <td style="border: none;"><t t-esc="docs.department.name or 'Unknow'"/></td>
                        </tr>
                        <tr>
                            <td style="border: none;">PROJECT</td>
                            <td style="border: none;">:</td>
                            <td style="border: none;"><t t-esc="docs.project or 'Unknow'"/></td>
                        </tr>
                    </table>
                    <br/>
                    <h6><strong>PURPOSE OF ADVANCE REQUEST</strong></h6>
                     <table class="table" style=" border-collapse: collapse; height: 100px;  width: 100%; font-family: Calibri, sans-serif;  font-size: 12px;">
                         <tbody>
                             <tr style="border: 1px solid black; text-align: center;">
                            <td/>
                        </tr>
                         </tbody>

                    </table>
                    <br/>
                        <table class="table" style="margin-top: 20px; border-collapse: collapse; width: 100%; font-family: Calibri, sans-serif;  font-size: 12px;">
                            <tbody>
                              <tr>
                                <th style="text-align: center; border: 1px solid black; padding: 8px;">ITEM</th>
                                <th style="text-align: center; border: 1px solid black; padding: 8px;">AMOUNT</th>
                                <th style="text-align: center; border: 1px solid black; padding: 8px;">REMARK</th>
                              </tr>
                                <t t-foreach="docs.dana_line" t-as="data">
                                    <tr>
                                        <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data['description']"/></td>
                                        <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="'{:,.2f}'.format(data['amount'])"/></td>
                                        <td style="text-align: left; border: 1px solid black; padding: 8px;"/>
                                    </tr>
                                </t>
                                <tr>
                                        <td style="text-align: right; border: 1px solid black; padding: 8px;">TOTAL ADVANCE</td>
                                        <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="'{:,.2f}'.format(docs.total_amount)"/></td>
                                </tr>

                            </tbody>
                        </table>
                        <br/>
                        <p style="font-size: 12px;"><strong>Please Transfer To : <t t-esc="docs.bank_note"/></strong></p>
                        <br/>
                        <div class="row">
                            <div class="col col-4">
                                <table class="table" style="width: 90%; border-collapse: collapse;  font-size: 12px;">
                                    <tbody>
                                        <tr>
                                        <td style="text-align: center; height: 10px; border: 1px solid black;" colspan="2"><strong>REQUESTER</strong></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center; width: 50%; height: 30px; border: 1px solid black;">PIC</td>
                                        <td style="text-align: center; width: 50%; height: 30px; border: 1px solid black;">Manager</td>
                                    </tr>
                                     <tr>
                                        <td style="text-align: center; height: 100px; border: 1px solid black;"/>
                                        <td style="text-align: center; height: 100px; border: 1px solid black;"/>
                                    </tr>
                                     <tr>
                                        <td style="text-align: center; height: 30px; border: 1px solid black;"/>
                                        <td style="text-align: center; height: 30px; border: 1px solid black;"/>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col col-4">
                                <table class="table" style="width: 90%; border-collapse: collapse; font-size: 12px;">
                                    <tbody>
                                        <tr>
                                        <td style="text-align: center; height: 10px; border: 1px solid black;" colspan="2"><strong>ACCOUNTS</strong></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center; height: 30px; width: 50%; border: 1px solid black;">PIC</td>
                                        <td style="text-align: center; height: 30px; width: 50%; border: 1px solid black;">Senior/Manager</td>
                                    </tr>
