<odoo>
    <data>
        <record id="payment_request_form_view" model="ir.ui.view">
            <field name="name">payment.request.form.view</field>
            <field name="model">payment.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,validate"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="id == False or state != 'draft'"/>
                        <button name="action_validate" string="Validate" groups="sale_custome.accounting_custom_group" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                        <button name="action_print" string="Print"  type="object" invisible="id == False"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" invisible="id == False" readonly="1"/>
                            </h1>
                        </div>
                        <group>
<!--                            <field name="partner_id" string="Customer" required="1"/>-->
                            <field name="user_id" string="Responsible" readonly="state != 'draft'"/>
                            <field name="department_id" string="Department" readonly="state != 'draft'"/>
                            <field name="date" string="Date Request" required="1" readonly="state != 'draft'"/>
                            <field name="due_date" required="1" readonly="state != 'draft'"/>
                            <field name="type" required="1" readonly="state != 'draft'"/>
                            <field name="customer" string="CUSTOMER/PROJECT" required="1" readonly="state != 'draft'"/>
<!--                            <field name="priority" widget="priority" nolabel="1" class="oe_inline align-top"/>-->

                        </group>
                        <notebook>
<!--                            <button name="action_rfq" string="Cretae Quotations" type="object" class="btn-primary" icon="fa-plus"/>-->
                            <page string="Down Payment Lines" invisible="type != 'dp'">
                                <field name="payment_request_dp_ids" required="1" readonly="state != 'draft'">
                                    <tree editable="bottom">
                                        <field name="order_id" string="No. PO" required="1"/>
                                        <field name="currency_id"/>
                                        <field name="amount_total" string="Amount PO"/>
                                        <field name="percentage" string="Persentase %"/>
                                        <field name="state" invisible="1" nolabel="1"/>
                                        <field name="payment_state" invisible="1" nolabel="1"/>
                                        <field name="amount" string="Amount"/>
                                        <button name="action_create_dp" string="Create DP" type="object" class="oe_highlight" groups="sale_custome.accounting_custom_group" invisible="state not in ['confirmed','validate'] or payment_state == True"/>
                                        <button name="action_view_payment" string="View DP" type="object" class="oe_highlight" invisible="payment_state != True"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Bill Lines" invisible="type != 'bill'">
                                <field name="payment_request_bill_ids" required="1" readonly="state != 'draft'">
                                    <tree editable="bottom">

                                        <field name="bill_id" string="No. Bill" required=""/>
                                        <field name="bill_status" string="Status Pembayaran"/>
                                        <field name="state" invisible="1" nolabel="1"/>

                                        <button name="action_register_payment" string="Register Payment" type="object" class="oe_highlight" groups="sale_custome.accounting_custom_group" invisible="id == False or bill_status == True or state != 'confirmed'" />
                                        <field name="amount" string="Amount" required="1"/>
<!--                                        <field name="quantity"/>-->
<!--                                        <field name="product_uom"/>-->
<!--                                        <field name="price_unit"/>-->
<!--                                        <field name="subtotal" readonly="1"/>-->
                                    </tree>
                                </field>
                            </page>
                            <page string="Bank Information">
                                <group>
                                    <field name="bank_name"/>
                                    <field name="bank_number"/>
                                    <field name="account_holder"/>
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>

                </form>
            </field>
        </record>

        <record id="payment_request_tree_view" model="ir.ui.view">
            <field name="name">payment.request.tree.view</field>
            <field name="model">payment.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="priority" widget="priority"/>
                    <field name="name" string="Number"/>
                    <field name="date" string="Request Date"/>
                    <field name="type" string="Type"/>
                    <field name="state" string="Stage"/>
                </tree>
            </field>
        </record>

        <record id="payment_request_filtered_view" model="ir.ui.view">
            <field name="name">payment.request.filtered.view</field>
            <field name="model">payment.request</field>
            <field name="arch" type="xml">
                    <search string="Filter views">
                        <!-- Define your filters here -->
                        <filter string="Payment" name="finance_check" domain="[('state', '=', 'confirmed')]"/>
<!--                        <filter string="To Cost Control" name="cost_control" domain="[('state', '=', 'request')]"/>-->
                        <field name="name"/>

                    </search>
            </field>
        </record>

        <record id="action_payment_request" model="ir.actions.act_window">
            <field name="name">Payment Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.request</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_payment_request_account" model="ir.actions.act_window">
            <field name="name">Payment Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{"search_default_finance_check":1}</field>
            <field name="res_model">payment.request</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="payment_request_menuitem"
        name="Payment Request"
        sequence="10"
        parent="purchase.menu_procurement_management"
        action="action_payment_request"
        />

        <menuitem id="payment_request_menuitem_finance"
        name="Payment Request"
        sequence="10"
        parent="account.menu_finance"
        action="action_payment_request_account"
        />
    </data>
</odoo>