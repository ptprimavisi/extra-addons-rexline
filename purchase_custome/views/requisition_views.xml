<odoo>
    <menuitem id="requisition_root" name="Purchase Requisition" sequence="10"/>
    <data>
        <record id="requisition_form_view" model="ir.ui.view">
            <field name="name">purchase.requisition.form.view</field>
            <field name="model">purchase.requisition</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,ready,to_purchase,po,cancel"/>
                        <button string="Confirm" name="action_confirm" type="object" class="oe_highlight"  invisible="id == False or state != 'confirm'"/>
                        <button string="Print" name="action_print" type="object"  invisible="id == False or state not in ['to_purchase','po']"/>
                        <button string="Proceed to Purchasing" name="action_to_purchase" confirm="Do you want to delegate to purchasing?" type="object" groups="sale_custome.hr_ga_custom_group,sale_custome.it_custom_group" class="oe_highlight"  invisible="id == False or state != 'ready' or akses_proccess == False"/>
                        <button string="Create Quotation" name="action_create_quotation" confirm="Do you want to create quotation?" type="object" groups="sale_custome.hr_ga_custom_group,sale_custome.it_custom_group,sale_custome.purchasing_custom_group" class="oe_highlight"  invisible="id == False or state not in ['ready', 'to_purchase','po'] or akses_quot == False"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_count_po"
                                    type="object"
                                    class="oe_stat_button"

                                    icon="fa-list">
                                    <field name="count_po" widget="statinfo" string="Purchase Order"/>
                            </button>
                            <button name="action_count_quotation"
                                    type="object"
                                    class="oe_stat_button"

                                    icon="fa-list">
                                    <field name="count_quotation" widget="statinfo" string="Quotation"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" invisible="id == False"/>
                            </h1>
                        </div>
                        <group>
<!--                            <field name="partner_id" string="Customer" required="1"/>-->
                            <field name="responsible" invisible="1" readonly="state not in ['confirm','ready']"/>
                            <field name="employee_id" readonly="state not in ['confirm','ready']"/>
                            <field name="department_id" required="1" readonly="state not in ['confirm','ready']"/>
                            <field name="is_ga" invisible="1"/>
                            <field name="akses_quot" invisible="1"/>
                            <field name="date_confirm" invisible="1"/>
                            <field name="date_approved1" invisible="1"/>
                            <field name="date_approved2" invisible="1"/>
                            <field name="akses_proccess" invisible="1"/>
                            <field name="is_purchase" invisible="1"/>
                            <field name="it_id" string="Reference IT" readonly="1" invisible="category != 'ut'"/>
                            <field name="purpose"/>
                            <field name="requisition_date" required="1" readonly="1"/>
                            <field name="due_date" required="1"/>
                            <field name="ref" invisible="1"/>
                            <field name="category" string="Category Product" required="1" readonly="state not in ['confirm','ready']"/>
<!--                            <field name="inquiry_id" readonly="1"/>-->
<!--                            <field name="request_date"/>-->
<!--                            <field name="due_date" required="1"/>-->
<!--                            <field name="quotation_state" invisible="1"/>-->
<!--                            <field name="is_accounting" invisible="1"/>-->
<!--                            <button string="Cretae Quotation" name="action_rfq" type="object" class="oe_highlight" invisible="id == False"/>-->
                        </group>
                        <notebook>
<!--                            <button name="action_rfq" string="Cretae Quotations" type="object" class="btn-primary" icon="fa-plus"/>-->
                            <page string="Requisition Lines">
                                <field name="requisition_line" required="1" readonly="state in ['to_purchase','po'] and is_purchase == False">
                                    <tree editable="bottom">
                                        <field name="select" invisible="is_it == False and approve == False"/>
<!--                                        <field name="product_id" string="Product" invisible="is_it == False and approve == False or state not in ['to_purchase','po']"/>-->
                                        <field name="product_id" string="Product Purchase" groups="sale_custome.purchasing_custom_group"/>
                                        <field name="type"/>
                                        <field name="product_request" required="1"/>
                                        <field name="name" string="Specification" invisible="is_it == False and approve == False"/>
                                        <field name="brand" invisible="is_it == False and approve == False"/>
                                        <field name="quantity" invisible="is_it == False and approve == False"/>
                                        <field name="qty_purchase" invisible="is_it == False and approve == False"/>
                                        <field name="qty_ordered" groups="sale_custome.purchasing_custom_group" string="Quantity Purchase" invisible="is_it == False and approve == False"/>
                                        <field name="qty_received" groups="sale_custome.purchasing_custom_group" invisible="is_it == False and approve == False"/>
                                        <field name="product_uom" invisible="is_it == False and approve == False"/>
                                        <field name="price_unit" invisible="is_it == False and approve == False"/>
                                        <field name="subtotal" readonly="1" invisible="is_it == False and approve == False"/>
                                        <field name="remark" invisible="is_it == False and approve == False"/>
                                        <field name="approve" invisible="1" nolabel="1"/>
                                        <field name="state" invisible="1" nolabel="1"/>
                                        <field name="is_it" invisible="1" nolabel="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
<!--                        <group col="12" class="oe_invoice_lines_tab">-->
<!--                            <group colspan="8">-->
<!--                            &lt;!&ndash;<field name="narration" placeholder="Terms and Conditions" class="oe_inline text-break" nolabel="1"/>&ndash;&gt;-->
<!--                            </group>-->
<!--                            <group colspan="4">-->
<!--                                <group class="oe_subtotal_footer oe_right" >-->
<!--                                    <field name="total_cost" widget="monetary" string="Total Cost" readonly="1"/>-->
<!--                                    <field name="total_budget" widget="monetary" string="Total Budget" readonly="1"/>-->
<!--&lt;!&ndash;                                <field name="amount_total" invisible="1"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                <field name="amount_fix" string="Total Invoice Setelah Potongan" required="1"/>&ndash;&gt;-->
<!--                                </group>-->
<!--                            </group>-->
<!--                        </group>-->
                    </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
<!--                     <footer>-->
<!--                        <field name="total_cost" widget="monetary" readonly="1"/>-->
<!--                    </footer>-->

                </form>
            </field>
        </record>

        <record id="purchase_requisition_search_view" model="ir.ui.view">
            <field name="name">purchase.requisition.search.view</field>
            <field name="model">purchase.requisition</field>
            <field name="arch" type="xml">
                    <search string="Filter views">
                        <!-- Define your filters here -->
                        <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                        <filter string="GA" name="requisition_ga" domain="[('category', '=', 'ga')]"/>
                        <filter string="IT" name="requisition_it" domain="[('category', '=', 'ut')]"/>
                        <filter string="Process PO" name="requisition_po" domain="[('state', 'in', ['to_purchase','po'])]"/>
                    </search>
            </field>
        </record>

        <record id="requisition_tree_view" model="ir.ui.view">
            <field name="name">purchase.requisition.tree.view</field>
            <field name="model">purchase.requisition</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Number"/>
                    <field name="category" string="Requisition Category"/>
                    <field name="purpose" string="Purpose"/>
<!--                    <field name="responsible" string="Requisition Responsible"/>-->
                    <field name="requisition_date" string="Requisition Date"/>
                    <field name="due_date" string="Due Date"/>
                    <field name="state" string="Stage"/>
                </tree>
            </field>
        </record>

        <record id="pr_ga" model="ir.sequence">
            <field name="name">Purchase Requisition</field>
            <field name="code">EPR_GA</field>
            <field name="suffix">-MRF-REI-GA-%(year)s</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="pr_it" model="ir.sequence">
            <field name="name">Purchase Requisition</field>
            <field name="code">EPR_IT</field>
            <field name="suffix">-MRF-REI-IT-%(year)s</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="action_requisition_ga" model="ir.actions.act_window">
            <field name="name">Purchase Requisition GA</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition</field>
            <field name="context">{"search_default_requisition_ga":1}</field>
<!--            <field name="domain">[('users_branch','=',1)]</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_requisition_it" model="ir.actions.act_window">
            <field name="name">Purchase Requisition IT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition</field>
            <field name="context">{"search_default_requisition_it":1}</field>
<!--            <field name="domain">[('users_branch','=',1)]</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_requisition_po" model="ir.actions.act_window">
            <field name="name">Purchase Requisition IT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition</field>
            <field name="context">{"search_default_requisition_po":1}</field>
<!--            <field name="domain">[('users_branch','=',1)]</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="purchase_requisition_menuitem"
                  name="Purchase Requisition"
                  sequence="1"
                  parent="requisition_root"/>

        <menuitem id="purchase_requisition_ga_menuitem"
                  name="GA"
                  sequence="1"
                  parent="purchase_requisition_menuitem"
                  action="action_requisition_ga"/>
        <menuitem id="purchase_requisition_it_menuitem"
                  name="IT"
                  sequence="1"
                  parent="purchase_requisition_menuitem"
                  action="action_requisition_it"/>

        <menuitem id="requisition_purchase"
                  name="Purchase Requisition"
                  sequence="50"
                  parent="purchase.menu_procurement_management"
                  action="action_requisition_po"
        />
