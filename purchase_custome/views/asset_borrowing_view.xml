<odoo>
    <data>
        <record id="asset_borrowing_tree_view" model="ir.ui.view">
            <field name="name">asset.borrowing.tree.view</field>
            <field name="model">asset.borrowing</field>
            <field name="arch" type="xml">
                <tree editable="top" create="1" delete="1" multi_edit="1" string="Asset Borrowing">
                    <field name="borrow_date" string="Borrow Date" required="1"/>
                    <field name="pic" string="PIC"/>
                    <field name="pic_description" string="Description PIC"/>
                    <field name="product_tmpl_id" string="Product" required="1"/>
                    <field name="quantity"/>
                    <field name="uom_id" string="UoM"/>
                    <field name="so" string="SO"/>
                    <field name="project"/>
                    <field name="estimate_return_date"/>
                    <field name="deadline"/>
                    <field name="remark"/>
                    <field name="status"/>
                    <field name="product_uom_category_id" column_invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='variants']" position="after">
                    <page name="asset_borrowing" string="Asset Borrowing">
                        <field name="borrowing_ids">
                            <tree editable="bottom">
                                <field name="borrow_date" string="Borrow Date" required="1"/>
                                <field name="pic" string="PIC"/>
                                <field name="pic_description" string="Description PIC"/>
                                <field name="product_tmpl_id" string="Product" required="1"/>
                                <field name="quantity"/>
                                <field name="uom_id" string="UoM"/>
                                <field name="so" string="SO"/>
                                <field name="project"/>
                                <field name="estimate_return_date"/>
                                <field name="deadline"/>
                                <field name="remark"/>
                                <field name="status"/>
                                <field name="product_uom_category_id" column_invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="action_asset_borrowing" model="ir.actions.act_window">
            <field name="name">Asset Borrowing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asset.borrowing</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="asset_borrowing_menuitem"
                  name="Asset Borrowing List"
                  sequence="99"
                  parent="stock.menu_stock_inventory_control"
                  action="action_asset_borrowing"/>
    </data>
</odoo>