<odoo>
    <data>
        <record id="paymnt_wizard_form_view" model="ir.ui.view">
            <field name="name">payment.wizard.form.view</field>
            <field name="model">payment.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="bs_id" readonly="1"/>
                                <field name="amount"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="payment_type" readonly="1"/>
                            </group>
                            <group>
                                <field name="journal_id" required="1"/>
                                <field name="partner_type" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button
                            name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                        />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>