<odoo>
    <data>
        <record id="sinkron_wizard_so_form_view" model="ir.ui.view">
            <field name="name">sinkron.wizard.so.view.form</field>
            <field name="model">sinkron.wizard.so</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                            <field name="start_date" required="1"/>
                        </group>
                            <group>
                            <field name="end_date" required="1"/>
                        </group>
                        </group>

                    </sheet>
                    <footer>
                        <button
                            name="action_save"
                            string="Update"
                            type="object"
                            class="oe_highlight"
                        />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>