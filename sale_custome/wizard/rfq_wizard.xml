<odoo>
    <data>
        <record id="rfq_wizard_form_view" model="ir.ui.view">
            <field name="name">rfq_wizard.view.form</field>
            <field name="model">rfq.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
<!--                            <div class="oe_title">-->
<!--                                <h1>-->
<!--                                    <field name="name"/>-->
<!--                                </h1>-->
<!--                            </div>-->
<!--                            <field name="name"/>-->
                            <field name="partner_id" string="Customer"/>
                            <field name="inquiry_id" readonly="1"/>
                            <field name="due_date" string="Due Date" required="1"/>
                            <field name="sale_id" string="SO No." readonly="1"/>
                        </group>
                        <group>
                            <field name="lead_time" required="1"/>
                            <field name="validity" required="1"/>
                            <field name="picking_type_id" string="Deliver To" required="1"/>

                        </group>
                        <button name="action_clear_product" string="Clear Product" type="object"/>
                        <notebook>
                            <page string="Product Lines">
                                <field name="rfq_line_ids">
                                    <tree editable="bottom">
                                        <field name="select" invisible="product_id == False"/>
                                        <field name="product_id"/>
                                        <field name="type" string="type / category"/>
                                        <field name="description"/>
                                        <field name="specs_detail" string="Specs detail"/>
                                        <field name="brand" required="1"/>
                                        <field name="quantity"/>
                                        <field name="available_qty"/>
                                        <field name="qty_purchase"/>
                                        <field name="product_uom" string="Uom"/>
                                        <field name="unit_weight" optional="hide"/>
                                        <field name="total_weight" optional="hide"/>
                                        <field name="budget" optional="hide"/>
                                        <field name="unit_cost" optional="hide"/>
                                        <field name="schedule_date" optional="hide"/>
                                        <field name="wh_id" string="Dest Location" optional="hide"/>
                                        <field name="subtotal" readonly="1" optional="hide"/>
                                        <field name="attachment" widget="binary" filename="attachment_name" optional="hide"/>

                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button
                            name="button_save"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"
                        />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_inquiry_inquiry" model="ir.actions.act_window">
            <field name="name">Inquiry</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inquiry.inquiry</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--        <menuitem id="menu_inquiry_tree" name="Inquiry" parent="sale.sale_order_menu" action="action_inquiry_inquiry" sequence="1"/>-->
    </data>
</odoo>