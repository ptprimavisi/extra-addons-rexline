<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_inherith_view" model="ir.ui.view">
            <field name="name">crm.lead.inherit.view</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//button[@name='iap_enrich']" position="after">-->
<!--                    <button string="Approve Cost Estimation" name="action_approve_cost_estimation" type="object" invisible="id == False or is_approve == True"/>-->
<!--                </xpath>-->
                <xpath expr="//header" position="inside">
                    <button string="Send Inquiry" name="action_send_inquiry" class="oe_highlight" type="object" confirm="Are you sure you want to continue with the process?" invisible="id == False or count_inquiry >= 1"/>
<!--                    <button string="Approve Cost Estimation" confirm="Apakah anda ingin menyetujui dokumen ini?" name="action_approve_cost_estimation" type="object" invisible="id == False or is_approve == True " groups="sale_custome.group_sales_technical" />-->
                </xpath>
                <xpath expr="//field[@name='lost_reason_id']" position="after">
<!--                    <div class="o_lead_opportunity_form_inline_fields">-->
<!--                                <div class="oe_title">-->
<!--                                    <h1>-->
                    <field name="inquiry_name" invisible="id == False" readonly="1"/>
<!--                                    </h1>-->
<!--                                </div>-->
<!--                        </div>-->
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="cost_estimation" class="o_input_13ch" widget="monetary" options="{'currency_field': 'company_currency'}" readonly="1"/>
                    <field name="is_planner" invisible="1"/>
                    <field name="category_project"/>
                    <field name="process_to" invisible="1" />
                    <field name="pic_supply" domain="[('groups_id', 'in', group_ids)]" invisible="1"/>
                    <field name="note_header" string="Header Note"/>
                    <field name="date_deadline" string="Due Date Submission"
                           decoration-warning="warning_time == 'yellow'"
                           decoration-success="warning_time == 'green'"
                           decoration-danger="warning_time == 'red'"
                           optional="show" widget="remaining_days" readonly="1"/>
                    <field name="state_inquiry" string="Status Inquiry"/>
                    <field name="group_ids" invisible="1"/>
                    <field name="is_approve" invisible="1"/>
                    <field name="warning_time" invisible="1"/>
                    <field name="status_estimate" invisible="1"/>
                </xpath>
                <button name="action_schedule_meeting" position="before">
                    <button class="oe_stat_button" type="object"
                        name="action_view_inquiry" icon="fa-pencil-square-o" invisible="type == 'lead'">
                        <field name="count_inquiry" widget="statinfo" string="Inquiry"/>
                    </button>
                </button>
            </field>
    </record>
    <record id="inherit_crm_case_kanban_view_leads" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inquiry_name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <!-- Tambahkan field inquiry_name di bawah activity_ids -->
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="inquiry_name"/>
            </xpath>
            <xpath expr="//div[@class='o_kanban_record_subtitle']" position="after">
                <div>
                    <span class="o_kanban_record_subtitle">
                        <field name="inquiry_name" decoration-primary="1" optional="show"/>
                    </span>
                </div>
            </xpath>
        </field>
    </record>



</odoo>