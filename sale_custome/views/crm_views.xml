<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_inherith_view" model="ir.ui.view">
            <field name="name">crm.lead.inherit.view</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//button[@name='iap_enrich']" position="after">-->
<!--                    <button string="Approve Cost Estimation" name="action_approve_cost_estimation" type="object" invisible="id == False or is_approve == True"/>-->
<!--                </xpath>-->
                <xpath expr="//header" position="inside">
                    <button string="Send Inquiry" name="action_send_inquiry" class="oe_highlight" type="object" confirm="Are you sure you want to continue with the process?" invisible="id == False or count_inquiry >= 1"/>
<!--                    <button string="Approve Cost Estimation" confirm="Apakah anda ingin menyetujui dokumen ini?" name="action_approve_cost_estimation" type="object" invisible="id == False or is_approve == True " groups="sale_custome.group_sales_technical" />-->
                </xpath>
                <xpath expr="//field[@name='lost_reason_id']" position="after">
<!--                    <div class="o_lead_opportunity_form_inline_fields">-->
<!--                                <div class="oe_title">-->
<!--                                    <h1>-->
                    <field name="inquiry_name" string="CRF Number" invisible="id == False" readonly="1"/>
<!--                                    </h1>-->
<!--                                </div>-->
<!--                        </div>-->
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="BOQ">
                        <group>
                            <field name="attachment_ids" widget="many2many_binary" string="Attachments"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="cost_estimation" class="o_input_13ch" widget="monetary" options="{'currency_field': 'company_currency'}" readonly="1"/>
                    <field name="is_planner" invisible="1"/>
                    <field name="category_project"/>
                    <field name="process_to" invisible="1" />
                    <field name="pic_supply" domain="[('groups_id', 'in', group_ids)]" invisible="1"/>
                    <field name="note_header" string="Header Note"/>
                    <field name="date_deadline" string="Due Date Submission"
                           decoration-warning="warning_time == 'yellow'"
                           decoration-success="warning_time == 'green'"
                           decoration-danger="warning_time == 'red'"
                           optional="show" widget="remaining_days" readonly="1"/>
                    <field name="state_inquiry" string="Status Inquiry"/>
                    <field name="group_ids" invisible="1"/>
                    <field name="is_approve" invisible="1"/>
                    <field name="warning_time" invisible="1"/>
                    <field name="status_estimate" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='internal_notes']" position="inside">
                    <group>
                        <field name="inquiry_name" string="CRF Number" readonly="1"/>
                        <field name="date_deadline" string="Due Date"/>
                    </group>
                    <group string="DATA CLIENT" name="data_client" priority="1">
                        <field name="partner_id" string="Company Name"/>
                        <field name="location"/>
                    </group>
                    <group string="INQUIRY" name="inquiry" priority="1">
                        <field name="category_project" string="Type of Inquiry"/>
                        <field name="inquiry_desc" string="Name of Inquiry"/>
                        <field name="doc_support" string="Doc support/Data info"/>
                        <field name="quantity" string="Quantity"/>
                        <field name="specification" string="Specification/Client Request"/>
                        <field name="data_requirement" string="Data Requirements"/>
                        <field name="due_date_eng" string="Due Date Engineering"/>
                    </group>
                     <group string="DELIVERABLE DOCUMENTS" name="deliverable" priority="1">
                        <field name="received_cust_date" string="Received Inquiry from Customer"/>
                        <field name="received_sales_date" string="Received Inquiry from Sales"/>
                    </group>
                    <group string="ADDITIONAL INFO" name="additional" priority="1">
                        <field name="site_survey" string="Site Survey"/>
                        <field name="date_additional" string="Date"/>
                        <field name="location_additional" string="Location"/>
                        <field name="members" string="Members"/>
                    </group>
                    <group string="NOTES" name="notes" priority="1">
                        <group>
                          <field name="description"/>
                        </group>

                    </group>
                </xpath>
                <button name="action_schedule_meeting" position="before">
                    <button class="oe_stat_button" type="object"
                        name="action_view_inquiry" icon="fa-pencil-square-o" invisible="type == 'lead'">
                        <field name="count_inquiry" widget="statinfo" string="Inquiry"/>
                    </button>
                </button>
            </field>
    </record>
    <record id="inherit_crm_case_kanban_view_leads" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inquiry_name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <!-- Tambahkan field inquiry_name di bawah activity_ids -->
            <xpath expr="//field[@name='activity_ids']" position="after">
                <field name="inquiry_name"/>
            </xpath>
            <xpath expr="//div[@class='o_kanban_record_subtitle']" position="after">
                <div>
                    <span class="o_kanban_record_subtitle">
                        <field name="inquiry_name" decoration-primary="1" optional="show"/>
                    </span>
                </div>
            </xpath>

        </field>
    </record>

    <record id="crm_opportunity_view" model="ir.ui.view">
        <field name="name">crm.lead.filter.inherit.view</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='city']" position="after">
                <field name="inquiry_name" string="CRF Number"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_crm_case_tree_view_leads" model="ir.ui.view">
        <field name="name">crm.lead.tree.inquiry_name</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <!-- Tambahkan field inquiry_name di bawah activity_ids -->
            <xpath expr="//field[@name='create_date']" position="after">
                <field name="inquiry_name" string="CRF Number"/>
            </xpath>
        </field>
    </record>



</odoo>