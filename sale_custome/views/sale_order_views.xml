<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">inherit.sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="validity" invisible="state == 'sale'"/>
                    <field name="is_sales" invisible="1" nolabel="1"/>
                    <field name="ref_quotation" string="Quotation Ref" readonly="1"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page groups="sale_custome.group_sales_custom" string="Attachment">
                        <group>
                            <field name="attachment_ids" widget="many2many_binary" string="Attachments"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="order_id" invisible="1" nolabel="1"/>
                </xpath>

                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="is_sales" invisible="1" nolabel="1"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>

                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_subtotal']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>

                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="tax_base" optional="hide"/>
                </xpath>

                <xpath expr="//field[@name='tax_totals']" position="before">
                    <field name="amount_tax_base"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>

                <button name="action_view_delivery" position="before">
                    <button class="oe_stat_button" type="object"
                        name="action_view_estimate" icon="fa-pencil-square-o" invisible="count_estimate == 0">
                        <field name="count_estimate" widget="statinfo" string="Estimate"/>
                    </button>
                </button>
                <button name="action_cancel" position="after">
<!--                    <button name="action_print_report" string="Print Quotation" type="object" invisible="1"/>-->
                </button>
            </field>

        </record>

        <record id="sale_order_tree_inherit" model="ir.ui.view">
            <field name="name">inherit.sale.order.tree.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.sale_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_sales" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_tax']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_total']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_to_invoice']" position="attributes">
                    <attribute name="invisible">is_sales == False</attribute>
                </xpath>
            </field>
        </record>

<!--        <record id="sale.action_orders_to_invoice" model="ir.actions.act_window">-->
<!--            <field name="view_mode">tree,form,calendar,graph,pivot,activity</field>-->
<!--        </record>-->

        <record id="sale.view_sale_order_kanban" model="ir.ui.view">
            <field name="active">False</field>
        </record>

<!--        <record id="sale.action_orders_upselling" model="ir.actions.act_window">-->
<!--            <field name="view_mode">tree,form,calendar,graph,pivot,activity</field>-->
<!--        </record>-->




        <record id="account_move_form_inherit" model="ir.ui.view">
            <field name="name">inherit.account.move.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="source_invoice" 
                            domain="[('move_type', '=', 'out_invoice'), 
                                ('state', '=', 'posted'), 
                                ('partner_id', '=', partner_id),
                                ('is_credit_note','=',False)]" 
                            invisible="move_type != 'out_refund'" 
                            readonly="state != 'draft'"
                            required="move_type == 'out_refund'"/>
                </xpath>
                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="tax_base" optional="hide"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="before">
                    <field name="amount_tax_base"/>
                </xpath>

            </field>
        </record>

        <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
            <field name="domain">[('state', 'in', ['draft', 'sent'])]</field>
        </record>
    </data>
</odoo>