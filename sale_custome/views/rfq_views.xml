<odoo>
    <data>
        <record id="rfq_form_view" model="ir.ui.view">
            <field name="name">rfq.rfq.view.form</field>
            <field name="model">rfq.rfq</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <field name="state" widget="statusbar" statusbar_visible="rfp,boq,mrf"/>-->
<!--                        <button name="action_create_boq" string="Create BOQ" confirm="Are you sure you want to continue with the process?" class="oe_highlight" type="object" invisible="state != 'rfp' or id == False"/>-->
<!--                    </header>-->
                    <sheet>
<!--                        <div class="oe_button_box" name="button_box">-->
<!--                            <button name="action_count_boq"-->
<!--                                    type="object"-->
<!--                                    class="oe_stat_button"-->
<!--                                    icon="fa-pencil-square-o"-->
<!--                                    invisible="count_boq == 0">-->
<!--                                    <field name="count_boq" widget="statinfo" string="Cost Estimation"/>-->
<!--                            </button>-->
<!--                        </div>-->
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="partner_id" string="Customer" readonly="1"/>
                            <field name="date"/>
<!--                            <field name="wo_state" invisible="1"/>-->
                            <field name="operation_type" required="1"/>
                            <field name="currency_id" />
                            <field name="inquiry_id" invisible="1"/>
                            <field name="due_date" required="1"/>
                        </group>
                        <notebook>
                            <page string="Product Lines">
                                <field name="rfq_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="edit_price" invisible="1"/>
                                        <field name="quantity"/>
                                        <field name="product_uom" string="Uom"/>
                                        <field name="unit_weight" string="Unit weight/kg"/>
                                        <field name="total_weight" string="Total weight/kg"/>
                                        <field name="price_unit" readonly="edit_price == False"/>
<!--                                        <field name="rfq_id" invisible="1"/>-->
                                        <field name="currency_id" readonly="edit_price == False"/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rfq_tree_view" model="ir.ui.view">
            <field name="name">rfq.tree.view</field>
            <field name="model">rfq.rfq</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="state"
                            decoration-warning="state == 'rfp'"
                            decoration-info="state == 'boq'"
                            decoration-success="state == 'mrf'"
                            widget="badge"
                            optional="show"/>
<!--                    <field name="note"/>-->
                </tree>
            </field>
        </record>

        <record id="action_rfq" model="ir.actions.act_window">
            <field name="name">RFQ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rfq.rfq</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_rfq_tree" name="Material Request" parent="purchase.menu_procurement_management" action="action_rfq" sequence="10"/>

    </data>
</odoo>