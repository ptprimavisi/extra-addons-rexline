<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_inherited_form_view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_generate" 
                            string="Generate Asset" 
                            type="object" 
                            class="btn-primary"
                            confirm="Are you sure to add products to the Asset Management master? Make sure all products have been received"
                            invisible="is_generate_asset == True"
                            groups="sale_custome.it_custom_group"/>
                    <field name="is_generate_asset" invisible="1"/>
                </xpath>
                <!-- <xpath expr="//field[@name='effective_date']" position="after">
                    <field name="is_generate_asset"/>
                </xpath> -->
            </field>
        </record> 
        <record id="manajemen_assets_form_view" model="ir.ui.view">
            <field name="name">manajemen.assets.form</field>
            <field name="model">manajemen.assets</field>
            <field name="arch" type="xml">
                <form string="Manajemen Assets">
                    <!-- <header>
                        <button name="action_update_today" 
                                string="Update Today" 
                                type="object" 
                                class="btn-primary"
                                invisible="asset_type != 'storable'"/>
                    </header> -->
                    <sheet>
                        <group>
                            <field name="product_name" required="1"/>
                        </group>
                        <group>
                            <field name="asset_type"/>
                            <field name="name"/>
                            <field name="purchase_date"/>
                            <field name="value"/>
                            <field name="purchase_id" invisible="asset_type != 'storable'"/>
                            <field name="spesification" invisible="asset_type != 'storable'"/>
                            <field name="mac_address" invisible="asset_type != 'storable'"/>
                            <field name="serial_number" invisible="asset_type != 'storable'"/>
                            <field name="brand" invisible="asset_type != 'storable'"/>
                            <field name="qty" invisible="asset_type != 'storable'"/>
                            <field name="pic" invisible="asset_type != 'storable'"/>
<!--                            <field name="new_pic" invisible="asset_type != 'storable'"/>-->
                            <field name="location" invisible="asset_type != 'storable'"/>
                            <field name="designation" invisible="asset_type != 'storable'"/>
                            <field name="department"/>
                            <field name="head_department" invisible="asset_type != 'storable'"/>
                            
                            <field name="tipe" invisible="asset_type != 'consumable'"/>
                            <field name="license_number" invisible="asset_type != 'consumable'"/>
                            <field name="days_number" string="Number of Days" invisible="asset_type != 'consumable'"/>
                            <field name="expired_date" invisible="asset_type != 'consumable'"/>
                            <field name="admin_login" invisible="asset_type != 'consumable'"/>
                            <field name="portal_admin" widget="url" invisible="asset_type != 'consumable'"/>
                            <field name="contact_person" invisible="asset_type != 'consumable'"/>

                        </group>
                        <group>
                            <field name="delivered_date" invisible="asset_type != 'storable'"/>
                            <field name="returned_date" invisible="asset_type != 'storable'"/>
<!--                            <field name="transfer_date" invisible="asset_type != 'storable'"/>-->
                            <field name="usage_month" invisible="asset_type != 'storable'"/>
                            <field name="upgrade_ssd" invisible="asset_type != 'storable'"/>
                            <field name="spec_type" invisible="asset_type != 'storable'"/>
                            <field name="validity_days" invisible="asset_type != 'storable'"/>
                            <field name="current_date" invisible="asset_type != 'storable'"/>
                            <field name="usage_day" invisible="asset_type != 'storable'"/>
                            <field name="depreciation" invisible="asset_type != 'storable'"/>
                            <field name="current_value" invisible="asset_type != 'storable'"/>
                            <field name="remarks"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="assets_filtered_view" model="ir.ui.view">
            <field name="name">manajemen.assets.filtered.view</field>
            <field name="model">manajemen.assets</field>
            <field name="arch" type="xml">
                    <search string="Filter views">
                        <!-- Define your filters here -->
                        <filter string="Hardware" name="hardware" domain="[('asset_type', '=', 'storable')]"/>
                        <filter string="Software" name="software" domain="[('asset_type', '=', 'consumable')]"/>
<!--                        <filter string="To Cost Control" name="cost_control" domain="[('state', '=', 'request')]"/>-->
                        <field name="name"/>

                    </search>
            </field>
        </record>

        <record id="manajemen_assets_tree_view" model="ir.ui.view">
            <field name="name">manajemen.assets.tree</field>
            <field name="model">manajemen.assets</field>
            <field name="arch" type="xml">
                <tree string="Manajemen Assets">
                    <field name="name"/>
                    <field name="asset_type"/>
                    <field name="product_name"/>
                    <field name="expired_date" string="Remaining Expiry" optional="show" widget="remaining_days" invisible="asset_type != 'consumable'"/>
                    <field name="value"/>
                    <field name="purchase_date"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record id="action_manajemen_assets_hardware" model="ir.actions.act_window">
            <field name="name">Assets Hardware</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manajemen.assets</field>
            <field name="context">{"search_default_hardware":1}</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_manajemen_assets_software" model="ir.actions.act_window">
            <field name="name">Assets Software</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">manajemen.assets</field>
            <field name="context">{"search_default_software":1}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menuitem_manajemen_assets"
                name="Product Assets"
                parent="sale_custome.maintenance_report_menu"
                sequence="20"/>
        <menuitem id="menuitem_manajemen_assets_hardware"
                name="Hardware"
                parent="sale_custome.menuitem_manajemen_assets"
                action="action_manajemen_assets_hardware"
                sequence="20"/>
        <menuitem id="menuitem_manajemen_assets_software"
                name="Software"
                parent="sale_custome.menuitem_manajemen_assets"
                action="action_manajemen_assets_software"
                sequence="20"/>

    </data>

    <data noupdate="1">
        <record id="ir_cron_update_usage_day" model="ir.cron">
            <field name="name">Update Usage Day</field>
            <field name="model_id" ref="sale_custome.model_manajemen_assets"/>
            <field name="state">code</field>
            <field name="code">model.update_usage_day()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

        <record id="ir_cron_update_current_date" model="ir.cron">
            <field name="name">Update Current Date</field>
            <field name="model_id" ref="sale_custome.model_manajemen_assets"/>
            <field name="state">code</field>
            <field name="code">model.update_current_date()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>