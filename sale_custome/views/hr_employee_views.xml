<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit the existing hr.employee tree view -->
        <record id="view_employee_tree_inherit" model="ir.ui.view">
            <field name="name">hr.employee.tree.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
<!--                    <header>-->
                    <button name="action_sync_employee" confirm="Do you want to Update Employee?" string="Sync Employee" type="object"
                            class="btn-primary ms-1"
                            display="always"/>
                    <button name="action_report_manpower" string="Report Manpower" type="object"
                            class="btn-primary ms-1"
                            display="always"/>
<!--                        <button name="action_sync_employee" type="object" string="Approve All" class="btn-primary"/>-->
<!--                    </header>-->
                </xpath>

            </field>
        </record>

        <record id="view_employee_kanban_inherit" model="ir.ui.view">
            <field name="name">hr.employee.kanban.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="inside">
                    <header>
                        <button name="action_sync_employee" confirm="Do you want to Update Employee?" string="Sync Employee" type="object"
                                class="btn-primary ms-1"
                                display="always"/>
                        <button name="action_report_manpower" string="Report Manpower" type="object"
                            class="btn-primary ms-1"
                            display="always"/>
                    </header>
                </xpath>

            </field>
        </record>

        <record id="view_contract_tree_inherit" model="ir.ui.view">
            <field name="name">hr.contract.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="om_hr_payroll.hr_contract_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='allowances']" position="inside">
                    <label for="position_allowance"/>
                    <div class="o_row">
                        <field name="position_allowance" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="backpay_salary"/>
                    <div class="o_row">
                        <field name="backpay_salary" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                    <label for="transport_allowance"/>
                    <div class="o_row">
                        <field name="transport_allowance" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                </xpath>
                <xpath expr="//field[@name='contract_type_id']" position="before">
                    <!-- Adding a new field -->
<!--                    <field name="pph_kategori"/>-->
                    <field name="schedule_type_id" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_employee_form_mutation_lines" model="ir.ui.view">
            <field name="name">hr.employee.mutation.lines</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='public']" position="before">
                    <page string="Mutation History">
                        <field name="mutation_line_ids">
                            <tree editable="bottom">
                                <field name="position"/>
                                <field name="department_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="location_id"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="position"/>
                                    <field name="department_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="location_id"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
