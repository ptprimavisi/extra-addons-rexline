<odoo>
    <data>
        <record id="report_stock_form_view" model="ir.ui.view">
            <field name="name">stock.report.wizard.form.view</field>
            <field name="model">stock.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="product_id" widget="many2many_tags"/>
                            <field name="location_id" required="1"/>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>

                    </sheet>
                    <footer>
                        <button name="action_save" string="Generate" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_stock_period_form" model="ir.ui.view">
            <field name="name">stock.report.period.form.view</field>
            <field name="model">stock.report.period</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="location_id" required="1"/>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name="stock_awal"/>
                        <field name="stock_in"/>
                        <field name="stock_out"/>
                        <field name="final_stock"/>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="report_stock_period_tree" model="ir.ui.view">
            <field name="name">stock.report.period.tree.view</field>
            <field name="model">stock.report.period</field>
            <field name="arch" type="xml">
                <tree>
                    <header>
                        <button name="action_generate_period" string="Generate Report" type="object"
                            class="btn-primary ms-1"
                            display="always"/>
                    </header>
                        <field name="name"/>
                        <field name="product_id"/>
                        <field name="location_id" required="1"/>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name="stock_awal"/>
                        <field name="stock_in"/>
                        <field name="stock_out"/>
                        <field name="final_stock"/>
                </tree>
            </field>
        </record>

