        <record id="action_report_period" model="ir.actions.act_window">
            <field name="name">Report Stock</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.report.period</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="stock_report_menu"
        name="Report Stock Period"
        sequence="100"
        parent="stock.menu_warehouse_report"
        action="action_report_period"
        />
    </data>
</odoo>