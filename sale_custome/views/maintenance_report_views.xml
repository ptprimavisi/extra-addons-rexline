<odoo>
    <menuitem id="maintenance_report_menu" name="IT Management" sequence="20"/>
    <data>
        <record id="maintenance_report_form_view" model="ir.ui.view">
            <field name="name">maintenance.report.form.view</field>
            <field name="model">maintenance.report</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft, done"/>
<!--                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="id == False or state != 'draft'"/>-->
<!--                  <button name="action_create_quotation" string="Create Quotation" type="object" invisible="state != 'to_purchase' or is_purchase == False or id == False or state == 'cancel'"/>&ndash;&gt;-->
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" invisible="id == False" readonly="1"/>
                            </h1>
                        </div>
                        <group>
<!--                            <field name="partner_id" string="Customer" required="1"/>-->
                            <field name="date" required="1"/>
                            <field name="type" required="1"/>
                            <field name="user_id" required="1"/>
                            <field name="attachment_ids" widget="many2many_binary" string="Attachments"/>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="seq_maint_report" model="ir.sequence">
            <field name="name">Maintenance Report</field>
            <field name="code">MNT</field>
            <field name="prefix">MNT/%(y)s/000/</field>
            <field name="company_id" eval="False"/>
        </record>


        <record id="smaintenance_report_tree_view" model="ir.ui.view">
            <field name="name">maintenance.report.tree.view</field>
            <field name="model">maintenance.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                    <field name="date" required="1"/>
                    <field name="type" required="1"/>
                    <field name="state" required="1"/>
                </tree>
            </field>
        </record>

        <record id="action_maintenance_report" model="ir.actions.act_window">
            <field name="name">Maintenance Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.report</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="maint_report_menuitem"
        name="Maintenance Report"
        sequence="1"
        parent="maintenance_report_menu"
        action="action_maintenance_report"
        />
    </data>
</odoo>