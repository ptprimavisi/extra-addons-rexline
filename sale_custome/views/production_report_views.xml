<odoo>
    <data>
        <record id="production_report_form_view" model="ir.ui.view">
            <field name="name">production.report.form.view</field>
            <field name="model">production.report</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Mark as Done" confirm="Do you want to confirm?" class="oe_highlight" type="object" invisible="id == False or state != 'draft'"/>
                        <button name="action_create_sk" string="Surat Kerja" type="object" invisible=" id == False or state != 'draft'"/>
                        <button name="action_rest_draft" string="Reset to Draft" type="object" invisible="state != 'done'"/>
                        <button name="action_report" string="Generate Report" type="object" invisible="id == False"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_count_sk"
                                    type="object"
                                    class="oe_stat_button"
                                    invisible="count_sk == 0"
                                    icon="fa-pencil">
                                    <field name="count_sk" widget="statinfo" string="Surat Kerja"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" required="1"/>
                            <field name="mrf_ids" widget="many2many_tags"/>
                            <field name="product_id" required="1"/>
                            <field name="activity_date" required="1" readonly="1"/>
                            <field name="note"/>
                        </group>
                        <notebook>
                            <page string="Detail Progress">
                                <field name="production_line_ids">
                                    <tree editable="bottom">
                                        <field name="state" invisible="1" nolabel="1"/>
                                        <field name="product_id" string="Material" required="1"/>
                                        <field name="qty_to_consume" string="To Consume" required="1" readonly="state == 'done'"/>
                                        <field name="qty_consume" string="Consume" readonly="state == 'done'"/>
                                        <field name="weight"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="production_report_tree_view" model="ir.ui.view">
            <field name="name">production.report.tree.view</field>
            <field name="model">production.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="activity_date"/>
                    <field name="state"/>
<!--                    <field name="note"/>-->
                </tree>
            </field>
        </record>

        <record id="action_production_report" model="ir.actions.act_window">
            <field name="name">Production Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">production.report</field>
            <field name="view_mode">tree,form</field>
        </record>

<!--        <menuitem id="kas_kecil" name="Kas Kecil" sequence="10"/>-->
        <menuitem id="menu_production_schedule"
                name="Production Schedule"
                action="action_production_report"
                parent="mrp.menu_mrp_manufacturing"
                sequence="100"/>
    </data>
</odoo>