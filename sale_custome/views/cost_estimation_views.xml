<odoo>
    <data>
        <record id="cost_estimation_form_view" model="ir.ui.view">
            <field name="name">cost.estimation.view.form</field>
            <field name="model">cost.estimation</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft, final"/>
                        <button name="action_confirm" string="Confirm" class="oe_highlight" type="object" invisible="state != 'draft' or id == False"/>
<!--                        <button name="action_create_mrf" string="Create MRF" class="oe_highlight" type="object" invisible="state != 'boq' or id == False"/>-->

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="partner_id" string="Customer"/>
                            <field name="rfq_id" invisible="1"/>
                            <field name="operation_type" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Product Lines">
                                <field name="cost_estimation_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="edit_price" invisible="1"/>
                                        <field name="quantity"/>
                                        <field name="product_uom" string="Uom"/>
                                        <field name="price_unit" readonly="edit_price == False"/>
<!--                                        <field name="rfq_id" invisible="1"/>-->
                                        <field name="currency_id" readonly="edit_price == False"/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                </field>
                                <field name="price_total" nolabel="1" colspan="2" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cost_estimation_tree_view" model="ir.ui.view">
            <field name="name">cost.estimation.tree.view</field>
            <field name="model">cost.estimation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="state"
                            decoration-warning="state == 'draft'"
                            decoration-success="state == 'finish'"
                            widget="badge"
                            optional="show"/>
                </tree>
            </field>
        </record>

<!--        <record id="action_cost_estimation" model="ir.actions.act_window">-->
<!--            <field name="name">Cost Estimation</field>-->
<!--            <field name="type">ir.actions.act_window</field>-->
<!--            <field name="res_model">cost.estimation</field>-->
<!--            <field name="view_mode">tree,form</field>-->
<!--        </record>-->

<!--        <menuitem id="menu_boq_tree" name="Cost Estimation" action="action_cost_estimation" sequence="1"/>-->
    </data>
</odoo>