            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="row">
                        <div class="col-6">
                            <p style="margin-bottom: 4px;"><t t-esc="company_street1"/></p>
                            <p style="margin-bottom: 4px;">Phone : <t t-esc="company_phone"/></p>
                            <p style="margin-bottom: 4px;">Fax : </p>
                            <p style="margin-bottom: 4px;">Email : <t t-esc="email"/></p>
                            <p style="margin-bottom: 0;">Website : <t t-esc="company_web"/></p>
                        </div>
                        <div class="col-6">
                            <table style="margin-left: 90px;">
                                <tbody>
                                    <tr>
                                        <td style="padding-bottom: 10px;">DATE</td>
                                        <td><span style="margin-left:10px;"/> : <span style="margin-left:10px;"/><t t-esc="po_date"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-bottom: 10px;">ORDER #</td>
                                        <td><span style="margin-left:10px;"/> : <span style="margin-left:10px;"/><t t-esc="po_name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-bottom: 10px;">DUE DATE</td>
                                        <td><span style="margin-left:10px;"/> : <span style="margin-left:10px;"/><t t-esc="po_date_due"/></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <br></br>

