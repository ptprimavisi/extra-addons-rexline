        <record id="action_report_po" model="ir.actions.report">
            <field name="name">Print Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.purchase_order</field>
            <field name="report_file">custom_report.purchase_order</field>
            <field name="print_report_name">object.name</field>
