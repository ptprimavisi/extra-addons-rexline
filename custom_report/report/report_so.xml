<odoo>
    <data>
        <record id="action_report_so" model="ir.actions.report">
            <field name="name">Print Out SO</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.report_so</field>
            <field name="report_file">custom_report.report_so</field>
            <field name="print_report_name">"Print Out SO"</field>
        </record>
        
        <template id="report_so">
            <t t-set="data_report_margin_top" t-value="15"/>
            <t t-call="web.html_container">
                <div class="container" style="font-family: Calibri, sans-serif;">
                    <div style="text-align: left;">
                        <img t-if="logo" t-att-src="logo" style="width: 120px; height: auto;" alt="Logo"/><br/><br/>
                        <!-- <img src="/custom_report/static/src/img/invoice_rexline.png" style="width: 120px; height: auto;" /> -->
                    </div>

                    <table class="table" style="width: 100%; font-size: 14px;">
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;"><b><t t-esc="company_name"/></b></td>
                            <td style="border: 1px solid #ffffff;"><b>Date:</b></td>
                            <td style="border: 1px solid #ffffff;"><t t-esc="so_date"/></td>
                        </tr>
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;">
                                <t t-esc="company_street1"/> <t t-esc="company_street2"/>
                                <t t-esc="company_street3"/><br/>
                                <t t-esc="company_phone"/><br/>
<!--                                <t t-esc="company_web"/><br/>-->
<!--                                <t t-esc="company_npwp"/><br/>-->
                            </td>
                            <td style="border: 1px solid #ffffff;"><b>Sales Order #:</b></td>
                            <td style="border: 1px solid #ffffff;"><t t-esc="so_name"/></td>
                        </tr>
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;">
                                <t t-esc="company_web"/><br/>
                                <t t-esc="company_npwp"/>
                            </td>
                            <td style="border: 1px solid #ffffff;">Customer's Reference :</td>
                            <td style="border: 1px solid #ffffff;"><t t-esc="customer_ref"/></td>
                        </tr>
                    </table>

                    <table class="table" style="width: 50%; font-size: 14px;">
                        <tr style="border: 1px solid #ffffff; background-color: #12476e; color: white;">
                            <td style="padding: 5px;"><b>CUSTOMER</b></td>
                        </tr>
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;"><t t-esc="partner_name"/></td>
                        </tr>
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;">
                                <t t-esc="partner_street1"/> <t t-esc="partner_street2"/>
                                <t t-esc="partner_street3"/><br/>
                            </td>
                        </tr>
                    </table>

                    <table class="table" style="border-collapse: collapse; width: 100%; font-size: 14px;text-align: left;">
                        <tr style="background-color: #12476e; color: white;">
                            <th style="padding: 5px; border: 1.5px solid black;">Tags</th>
                            <th style="padding: 5px; border: 1.5px solid black;">Term</th>
                            <th style="padding: 5px; border: 1.5px solid black;">Due Date</th>
                        </tr>
                        <tr>
                            <td style="border: 1.5px solid black;"><t t-esc="tags_info"/></td>
                            <td style="border: 1.5px solid black;"><t t-esc="so_term"/></td>
                            <td style="border: 1.5px solid black;"><t t-esc="so_date_due"/></td>
                        </tr>
                    </table>
                    <br/>
                    <table class="table table-bordered" style="border-collapse: collapse; width: 100%; font-size: 14px;">
                        <thead>
                            <tr style="border: 1.5px solid black; background-color: #12476e; color: white;">
                                <th style="border: 1.5px solid black;">No.</th>
                                <th style="border: 1.5px solid black;">Quantity</th>
                                <th style="border: 1.5px solid black;">Product</th>
                                <th style="border: 1.5px solid black;">Description</th>
                                <th style="border: 1.5px solid black;">Unit Price (Rp.)</th>
                                <th style="border: 1.5px solid black;">Discount</th>
                                <th style="border: 1.5px solid black;">Taxed</th>
                                <th style="border: 1.5px solid black;">Amount (Rp.)</th>
                                <th style="border: 1.5px solid black;">Tax Base (Rp.)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="counter" t-value="0"/>
                            <t t-foreach="order_lines" t-as="lines">
                                <tr>
                                    <td style="border: 1.5px solid black;"><t t-set="counter" t-value="counter + 1"/><t t-esc="counter"/></td>  <!-- No. -->
                                    <td t-if="lines[0]" style="border: 1.5px solid black; text-align: left;">
                                        <t t-esc="lines[0]"/>
                                    </td>
                                    <td t-if="lines[1]" style="border: 1.5px solid black; text-align: left;">
                                        <t t-esc="lines[1]"/>
                                    </td>
                                    <td t-if="lines[2]" style="border: 1.5px solid black; text-align: left;">
                                        <pre t-esc="lines[2]"/>
                                    </td>
                                    <td t-if="lines[3]" style="border: 1.5px solid black; text-align: right;">
                                        <t t-esc="lines[3]"/>
                                    </td>
                                    <td t-if="lines[4]" style="border: 1.5px solid black; text-align: center;">
                                        <t t-esc="lines[4]"/>
                                    </td>
                                    <td t-if="lines[5]" style="border: 1.5px solid black; text-align: center;">
                                        <t t-esc="lines[5]"/>
                                    </td>
                                    <td t-if="lines[6]" style="border: 1.5px solid black; text-align: right;">
                                        <t t-esc="lines[6]"/>
                                    </td>
                                    <td t-if="lines[7]" style="border: 1.5px solid black; text-align: right;">
                                        <t t-esc="lines[7]"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <br/><br/><br/>

                    <table class="table" style="width: 100%; font-size: 14px;">
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;">
                                <b>AMOUNT IN WORD</b><br/><br/>
                                <t t-esc="balance_due_in_word"/> (RUPIAH)<br/><br/>
                                <b>Payment Detail</b><br/><br/>
                                Bank Name : MAYBANK<br/>
                                Bank Branch : SURABAYA<br/>
                                Bank Account Number : 2790000188<br/>
                                Bank Account Name : PT Rexline Engineering Indonesia<br/>
                            </td>
                            <td style="border: 1px solid #ffffff; min-width:170px;">
                                Subtotal<br/><br/>
                                Total Tax Base<br/><br/>
                                <t t-foreach="taxes" t-as="tax">
                                    <!-- <t t-esc="tax['name']"/> <t t-esc="tax['percentage']"/> %<br/> -->
                                    <t t-esc="tax['name']"/><br/>
                                </t>
                                <b><br/>Total</b><br/>
                                <br/><p style="padding: 5px; background-color: #12476e; color: white;"><strong>Balance Due</strong></p>
                            </td>
                            <td style="border: 1px solid #ffffff;text-align: right;">
                                <t t-esc="subtotal"/><br/><br/>
                                <t t-esc="total_tax_base"/><br/><br/>
                                <t t-foreach="taxes" t-as="tax">
                                    <t t-esc="tax['amount']"/><br/>
                                </t>
                                <b><br/><t t-esc="balance_due"/></b><br/>
                                <br/><p style="background-color: #12476e; color: white; padding: 5px;">
                                    <strong><t t-esc="balance_due"/></strong>
                                </p>
                            </td>
                        </tr>
                    </table>

                    <br/><br/>
<!--                    <table class="table" style="width: 50%; font-size: 14px;text-align: left;">-->
<!--                        <tr style="background-color: #12476e; color: white; display: table-row-group;">-->
<!--                            <th style="padding: 5px; border: 1.5px solid black;">Special Notes and Instructions</th>-->
<!--                        </tr>-->
<!--                        <tr style="display: table-row-group;">-->
<!--                            <td style="padding: 5px; border: 1.5px solid black;">-->
<!--                                <b>Message</b><br/><br/>-->
<!--                                Terms &amp; Conditions:<br/>-->
<!--                                <t t-raw="so_tnc"/>-->
<!--                            </td>-->
<!--                        </tr>-->
<!--                    </table>-->
                    <div style=" min-width: 600px; max-width: 100%; word-wrap: break-word; overflow-wrap: break-word; display: inline-block; font-size: 14px; text-align: left; border: 1.5px solid black; padding: 10px; page-break-inside: avoid;">
                        <div style="background-color: #12476e; color: white; padding: 8px; font-weight: bold;">
                            Special Notes and Instructions
                        </div>
                        <div style="padding: 10px;">
                            <b>Message</b><br/><br/>
                            <p>Terms &amp; Conditions:</p>
                            <div class="row">
                                <t t-raw="so_tnc"/>
                            </div>

                        </div>
                    </div>

                    <p style="text-align: right; font-size: 14px;">
                        <br/><img t-if="signature_image" t-att-src="signature_image" style="width: 200px; height: auto;" alt="Signature"/>
                        <br/><t t-esc="signature_name"/><br/>
                        National Sales Leader<br/>
                        REXLINE ENGINEERING INDONESIA
                    </p>
                </div>
            </t>
        </template>

    </data>
</odoo>
