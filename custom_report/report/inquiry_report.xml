<odoo>
    <data>
        <record id="action_report_inquiry" model="ir.actions.report">
            <field name="name">Print Inquiry</field>
            <field name="model">inquiry.inquiry</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.report_inquiry</field>
            <field name="report_file">custom_report.report_inquiry</field>
            <field name="print_report_name">'%s - %s' % ('Inquiry', 'Number')</field>
        </record>
        <template id="report_inquiry">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="docs"/>
                    <div class="header" style="font-family: Calibri, sans-serif;">
                        <h4 style="text-align: center; padding-top: 10px !important;">
    <!--                        <t t-esc="company_name"/><br/>-->
                            INQUIRY
                        </h4>
                        <br></br>
                        <h3 style="text-align: center;"><strong><t t-esc="doc.name"/> </strong></h3>
                    </div>

                    <div class="page" style="font-family: Calibri, sans-serif;">
                        <h4 style="text-align: center; padding-top: 10px !important;">
                            <t t-esc="doc.name"/><br/>
                        </h4>
                        <table class="table" style="width: 40%; font-size: 14px;">
                            <tr>
                                <td>Customer</td>
                                <td>:</td>
                                <td><t t-esc="doc.partner_id.name or ''"/></td>
                            </tr>
                            <tr>
                                <td>Header Notes</td>
                                <td>:</td>
                                <td><t t-esc="doc.header_note or ''"/></td>
                            </tr>
                            <tr>
                                <td>Category</td>
                                <td>:</td>
                                <td><t t-esc="doc.project_category or ''"/></td>
                            </tr>
                            <tr>
                                <td>Date</td>
                                <td>:</td>
                                <td><t t-esc="doc.date or ''"/></td>
                            </tr><tr>
                                <td>Due Date</td>
                                <td>:</td>
                                <td><t t-esc="doc.due_date or ''"/></td>
                            </tr><tr>
                                <td>SO No</td>
                                <td>:</td>
                                <td><t t-esc="doc.sale_id.name or ''"/></td>
                            </tr>
                        </table>
                        <div>
                            <h2 style="text-align: center;">Product</h2>
                        </div>
                        <table class="table" style="margin-top: 20px; border-collapse: collapse; width: 100%; font-family: Calibri, sans-serif; font-size: 12px;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="width: 10%; border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">No</th>
                                        <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Product</th>
                                        <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Cost Price</th>

                                  </tr>

                                </thead>
                                <tbody>
                                    <t t-set="c" t-value="0"/>
                                    <t t-if="doc.project_category == 'supply'">
                                        <t t-foreach="doc.inquiry_line_detail" t-as="data">
                                            <t t-set="c" t-value="c+1"/>
                                            <tr>
                                                <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="c"/></td>
                                                <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_id.product_tmpl_id.name"/></td>
                                                <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="'{:,.2f}'.format(data.cost_price)"/></td>
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.type or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_request or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.name or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.brand"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.quantity"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.qty_purchase"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_uom.name or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.requisition_id.due_date or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"/>-->
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <t t-foreach="doc.inquiry_line_ids" t-as="data">
                                            <t t-set="c" t-value="c+1"/>
                                            <tr>
                                                <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="c"/></td>
                                                <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.bom_id.product_tmpl_id.name"/></td>
                                                <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="'{:,.2f}'.format(data.bom_cost)"/></td>
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.type or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_request or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.name or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.brand"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.quantity"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.qty_purchase"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_uom.name or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.requisition_id.due_date or ''"/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>-->
                                                <!--<td style="text-align: left; border: 1px solid black; padding: 8px;"/>-->
                                            </tr>
                                        </t>
                                    </t>


                                </tbody>
                            </table>
                            <hr></hr>
                            <div>
                                <t t-if="doc.project_category != 'supply'">
                                    <div>
                                        <h2 style="text-align: center;">Detail Material</h2>
                                    </div>
                                    <table class="table" style="margin-top: 20px; border-collapse: collapse; width: 100%; font-family: Calibri, sans-serif; font-size: 12px;">
                                        <thead>
                                            <tr>
                                                <th class="text-center" style="width: 10%; border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">No</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Product</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Description</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Quantity</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">UoM</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Unit Weight</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Total Weight</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Cost</th>
                                                <th class="text-center" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white; padding: 7px;">Total Cost</th>

                                          </tr>

                                        </thead>
                                        <tbody>
                                            <t t-set="c" t-value="0"/>
                                            <t t-foreach="doc.inquiry_line_detail" t-as="datas">
                                                <t t-set="c" t-value="c+1"/>
                                                <tr>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="c"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="datas.product_id.product_tmpl_id.name"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="datas.name"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="datas.product_uom_quantity"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="datas.product_uom.name"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="datas.unit_weight"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="datas.total_weight"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="'{:,.2f}'.format(datas.cost_price)"/></td>
                                                    <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="'{:,.2f}'.format(datas.subtotal)"/></td>
                                                </tr>
                                            </t>

                                        </tbody>
                                    </table>

                                </t>
                            </div>


                        <!-- <p style="font-size: 14px;">Total Uang Diterima : <t t-esc="total_diterima"/></p> -->
                    </div>
                </t>

            </t>
        </template>
    </data>
</odoo>