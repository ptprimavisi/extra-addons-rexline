<odoo>
    <data>
        <record id="action_report_mrf" model="ir.actions.report">
            <field name="name">Print MRF</field>
            <field name="model">mrf.mrf</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.report_mrf</field>
            <field name="report_file">custom_report.report_mrf</field>
            <field name="print_report_name">"material request form"</field>
        </record>
        <template id="report_mrf">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="docs"/>
                    <div class="header" style="font-family: Calibri, sans-serif;">
                        <h4 style="text-align: center; padding-top: 10px !important;">
    <!--                        <t t-esc="company_name"/><br/>-->
                            Material Request Form (MRF)
                        </h4>
                    </div>

                    <div class="page" style="font-family: Calibri, sans-serif;">
                        <table class="table" style="width: 40%; font-size: 14px;">
                            <tr>
                                <td>MRF No</td>
                                <td>:</td>
                                <td><t t-esc="doc.name or ''"/></td>
                            </tr>
                            <tr>
                                <td>Dept/User</td>
                                <td>:</td>
                                <td><t t-esc="doc.create_uid.name or ''"/></td>
                            </tr>
                            <tr>
                                <td>Purpose</td>
                                <td>:</td>
                                <td><t t-esc="doc.partner_id.name or 'Unknow'"/></td>
                            </tr>
                            <tr>
                                <td>Date</td>
                                <td>:</td>
                                <td><t t-esc="doc.request_date or 'Unknow'"/></td>
                            </tr><tr>
                                <td>Due Date</td>
                                <td>:</td>
                                <td><t t-esc="doc.due_date or 'Unknow'"/></td>
                            </tr><tr>
                                <td>Ref</td>
                                <td>:</td>
                                <td><t/></td>
                            </tr>
                        </table>

                            <table class="table" style="margin-top: 20px; border-collapse: collapse; width: 100%; font-family: Calibri, sans-serif; font-size: 12px;">
                                <thead>
                                    <tr>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">No</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Project</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Type / Category</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Item Description</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Specs</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Brand</th>
                                      <th class="text-center" colspan="3" style="border: 1px solid black; ">Quantity</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">UoM</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Due Date</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Delivery Location</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center;">Remark</th>

                                  </tr>
                                  <tr>
                                      <th style="border: 1px solid black; ">Request</th>
                                      <th style="border: 1px solid black; ">Stock</th>
                                      <th style="border: 1px solid black; ">Purchase</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <t t-set="c" t-value="0"/>
                                    <t t-foreach="doc.mrf_line_ids" t-as="data">
                                        <t t-set="c" t-value="c+1"/>
                                        <tr>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.mrf_id.inquiry_id.name or ''"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_id.product_tmpl_id.categ_id.name"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_id.product_tmpl_id.name"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.specs_detail"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.brand"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.quantity"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.avilable_qty"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.qty_purchase"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_uom_id.name"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.mrf_id.due_date"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.mrf_id.picking_type_id.warehouse_id.name"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"></td>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>


                        <!-- <p style="font-size: 14px;">Total Uang Diterima : <t t-esc="total_diterima"/></p> -->
                    </div>
                </t>

            </t>
        </template>
    </data>
</odoo>