<odoo>
    <data>
        <record id="action_report_requisition" model="ir.actions.report">
            <field name="name">Print Requisition</field>
            <field name="model">purchase.requisition</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.requisition</field>
            <field name="report_file">custom_report.requisition</field>
            <field name="print_report_name">"Purchase Requisition"</field>
        </record>
        <template id="requisition">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="docs"/>
                    <div class="header" style="font-family: Calibri, sans-serif;">
                        <h4 style="text-align: center; padding-top: 10px !important;">
    <!--                        <t t-esc="company_name"/><br/>-->
                            Purchase Requisition (PR)
                        </h4>
                    </div>

                    <div class="page" style="font-family: Calibri, sans-serif;">
                        <table class="table" style="width: 40%; font-size: 14px;">
                            <tr>
                                <td>MRF No</td>
                                <td>:</td>
                                <td><t t-esc="doc.name or ''"/></td>
                            </tr>
                            <tr>
                                <td>Dept/User</td>
                                <td>:</td>
                                <td><t t-esc="doc.department_id.name or ''"/></td>
                            </tr>
                            <tr>
                                <td>Purpose</td>
                                <td>:</td>
                                <td><t t-esc="doc.purpose or 'Unknow'"/></td>
                            </tr>
                            <tr>
                                <td>Date</td>
                                <td>:</td>
                                <td><t t-esc="doc.requisition_date or 'Unknow'"/></td>
                            </tr><tr>
                                <td>Due Date</td>
                                <td>:</td>
                                <td><t t-esc="doc.due_date or 'Unknow'"/></td>
                            </tr><tr>
                                <td>Ref</td>
                                <td>:</td>
                                <td><t t-esc="doc.it_id.name or ''"/></td>
                            </tr>
                        </table>

                            <table class="table" style="margin-top: 20px; border-collapse: collapse; width: 100%; font-family: Calibri, sans-serif; font-size: 12px;">
                                <thead>
                                    <tr>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">No</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Project</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Type / Category</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Item Description</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Specs</th>
                                    <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Brand</th>
                                      <th class="text-center" colspan="3" style="border: 1px solid black; background-color: #4764ba; color: white; ">Quantity</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">UoM</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Due Date</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Delivery Location</th>
                                      <th class="text-center" rowspan="2" style="border: 1px solid black; vertical-align: middle; text-align: center; background-color: #4764ba; color: white;">Remark</th>

                                  </tr>
                                  <tr>
                                      <th style="border: 1px solid black; background-color: #4764ba; color: white;">Request</th>
                                      <th style="border: 1px solid black; background-color: #4764ba; color: white; ">Stock</th>
                                      <th style="border: 1px solid black; background-color: #4764ba; color: white; ">Purchase</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <t t-set="c" t-value="0"/>
                                    <t t-foreach="doc.requisition_line" t-as="data">
                                        <t t-set="c" t-value="c+1"/>
                                        <tr>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="c"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.type or ''"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_request or ''"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.name or ''"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.brand"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.quantity"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.qty_purchase"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.product_uom.name or ''"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t t-esc="data.requisition_id.due_date or ''"/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"><t/></td>
                                            <td style="text-align: left; border: 1px solid black; padding: 8px;"/>
                                        </tr>
                                    </t>

                                </tbody>
                            </table>

                        <div class="row">
                            <t t-if="doc.category == 'ut'">
                                <div class="col col-3">
                                    <table style="width: 90%; float: left;">
                                        <thead>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #e00732; color: white; padding: 8px;">Requested by</td></tr>
                                            <tr><td style="text-align: center; height: 60px; border: 1px solid black;"><h2 style="color: grey;"><strong>APPROVED</strong></h2></td></tr>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #4764ba; color: white; padding: 8px;"><t t-esc="doc.department_id.name or ''"/></td></tr>
                                        </thead>
                                    </table>
                                </div>
                                <div class="col col-3">
                                    <table style="width: 90%; margin: 0 auto;">
                                        <thead>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #e00732; color: white; padding: 8px;">Acknowledge by</td></tr>
                                            <tr><td style="text-align: center; height: 60px; border: 1px solid black;"><h2 style="color: grey;"><strong>APPROVED</strong></h2></td></tr>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #4764ba; color: white; padding: 8px;">MD Nasirujjaman / IT Manager</td></tr>
                                        </thead>
                                    </table>
                                </div>
                                <div class="col col-3">
                                    <table style="width: 90%; margin: 0 auto;">
                                        <thead>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #e00732; color: white; padding: 8px;">Prepared and Reviewed by</td></tr>
                                            <tr><td style="text-align: center; height: 60px; border: 1px solid black;"><h2 style="color: grey;"><strong>APPROVED</strong></h2></td></tr>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #4764ba; color: white; padding: 8px;">Arigusandio / IT Support</td></tr>
                                        </thead>
                                    </table>
                                </div>
                                <div class="col col-3">
                                    <table style="width: 90%; float: right;">
                                        <thead>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #e00732; color: white; padding: 8px;">Approved by</td></tr>
                                            <tr><td style="text-align: center; height: 60px; border: 1px solid black;"><h2 style="color: grey;"><strong>APPROVED</strong></h2></td></tr>
                                            <tr><td style="text-align: center; border: 1px solid black; background-color: #4764ba; color: white; padding: 8px;">(M. Rizal S. / Director)</td></tr>
                                        </thead>
                                    </table>
                                </div>
                            </t>
                        </div>


                        <!-- <p style="font-size: 14px;">Total Uang Diterima : <t t-esc="total_diterima"/></p> -->
                    </div>
                </t>

            </t>
        </template>
    </data>
</odoo>