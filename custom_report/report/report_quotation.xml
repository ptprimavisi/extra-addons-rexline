<odoo>
    <data>
        <record id="action_report_quotation" model="ir.actions.report">
            <field name="name">Print Out Quotation</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_report.report_quotation</field>
            <field name="report_file">custom_report.report_quotation</field>
            <field name="print_report_name">"Quotation Print"</field>
        </record>
        
        <template id="report_quotation">
            <t t-set="data_report_margin_top" t-value="15"/>
            <t t-call="web.html_container">
                <div class="container" style="font-family: Calibri, sans-serif;">
                    <table class="table" style="width: 100%; font-size: 14px;">
                        <tr style="border: 1px solid #ffffff;">
                            <td style="border: 1px solid #ffffff;">
                                <div style="text-align: left;">
                                    <img t-if="logo" t-att-src="logo" style="width: 120px; height: auto;" alt="Logo"/>
                                    <!-- <img src="/custom_report/static/src/img/invoice_rexline.png" style="width: 120px; height: auto;" /> -->
                                </div>
                            </td>
                            <td style="border: 1px solid #ffffff;">
                                <b><t t-esc="company_name"/></b><br/>
                                <t t-if="company_street1 and company_street2">
                                    <t t-esc="company_street1"/>, <t t-esc="company_street2"/><br/>
                                </t>
                                <t t-else="">
                                    <t t-esc="company_street1"/> <t t-esc="company_street2"/><br/>
                                </t>
                                <t t-esc="company_street3"/><br/>
                                <t t-esc="company_phone"/><br/>
                                <t t-esc="company_web"/><br/>
                                <t t-esc="company_npwp"/><br/>
                            </td>
                        </tr>
                    </table>
                    <table class="table" style="width: 100%; font-size: 14px; border-collapse: collapse;">
                        <tr>
                            <td>
                                <table style="width: 60%;">
                                    <tr>
                                        <td style="border: 1px solid #ffffff; width: 400px;"><b>BILL TO</b></td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid #ffffff; width: 400px;"><t t-esc="partner_name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid #ffffff; width: 400px;">
                                            <t t-if="partner_street1 and partner_street2">
                                                <t t-esc="partner_street1"/>, <t t-esc="partner_street2"/><br/>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="partner_street1"/> <t t-esc="partner_street2"/><br/>
                                            </t>
                                            <t t-esc="partner_street3"/><br/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td style="width: 40%;">
                                <table style="width: 90%; float: right; font-size: 14px;">
                                    <tr style="border-collapse: collapse;">
                                        <th style="background-color: #778899; color: white; width: 50%; padding: 5px; text-align: left;">QUOTE #</th>
                                        <th style="background-color: #778899; color: white; width: 50%; padding: 5px; text-align: left;">
                                            <t t-esc="so_name"/>
                                        </th>
                                    </tr>
                                    <tr style="border-collapse: collapse;">
                                        <th style="background-color: #778899; color: white; padding: 5px; text-align: left;">DATE</th>
                                        <th style="background-color: #778899; color: white; padding: 5px; text-align: left;">
                                            <t t-esc="so_date"/>
                                        </th>
                                    </tr>
                                    <tr style="border-collapse: collapse;">
                                        <th style="background-color: #778899; color: white; padding: 5px; text-align: left;">EXPIRED DATE</th>
                                        <th style="background-color: #778899; color: white; padding: 5px; text-align: left;">
                                            <t t-esc="so_date_due"/>
                                        </th>
                                    </tr>
                                </table>
                            </td>

                        </tr>
                        <!--<tr style="border: 1px solid #ffffff;">-->
                        <!--    <td style="border: 1px solid #ffffff; width: 400px;"><b>BILL TO</b></td>-->
                        <!--    <td style="border: 1px solid #ffffff; background-color: #778899; color: white;">QUOTE # :</td>-->
                        <!--    <td style="border: 1px solid #ffffff; background-color: #778899; color: white;"><t t-esc="so_name"/></td>-->
                        <!--</tr>-->
                        <!--<tr style="border: 1px solid #ffffff;">-->
                        <!--    <td style="border: 1px solid #ffffff; width: 400px;"><t t-esc="partner_name"/></td>-->
                        <!--    <td style="border: 1px solid #ffffff; background-color: #778899; color: white;">DATE :</td>-->
                        <!--    <td style="border: 1px solid #ffffff; background-color: #778899; color: white;"><t t-esc="so_date"/></td>-->
                        <!--</tr>-->
                        <!--<tr style="border: 1px solid #ffffff;">-->
                        <!--    <td style="border: 1px solid #ffffff; width: 400px;">-->
                        <!--        <t t-if="partner_street1 and partner_street2">-->
                        <!--            <t t-esc="partner_street1"/>, <t t-esc="partner_street2"/><br/>-->
                        <!--        </t>-->
                        <!--        <t t-else="">-->
                        <!--            <t t-esc="partner_street1"/> <t t-esc="partner_street2"/><br/>-->
                        <!--        </t>-->
                        <!--        <t t-esc="partner_street3"/><br/>-->
                        <!--    </td>-->
                        <!--    <td style="border: 1px solid #ffffff; background-color: #778899; color: white;">EXPIRED DATE :</td>-->
                        <!--    <td style="border: 1px solid #ffffff; background-color: #778899; color: white;"><t t-esc="so_date_due"/></td>-->
                        <!--</tr>-->
                    </table>
                    <br></br>

                    <table class="table" style="width: 100%; font-size: 14px; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #778899; color: white;">
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Discount</th>
                                <th>Unit Price (Rp.)</th>
                                <th>Amount (Rp.)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="quotation_lines" t-as="lines">
                                <tr>
                                    <td t-if="lines[0]" style="text-align: left; border-bottom: 1.5px solid #778899;">
                                        <t t-esc="lines[0]"/>
                                    </td>
                                    <td t-if="lines[1]" style="text-align: left; border-bottom: 1.5px solid #778899;">
                                        <t t-esc="lines[1]"/>
                                    </td>
                                    <td t-if="lines[2]" style="text-align: center; border-bottom: 1.5px solid #778899;">
                                        <t t-esc="lines[2]"/>
                                    </td>
                                    <td t-if="lines[3]" style="text-align: right; border-bottom: 1.5px solid #778899;">
                                        <t t-esc="lines[3]"/>
                                    </td>
                                    <td t-if="lines[4]" style="text-align: right; border-bottom: 1.5px solid #778899;">
                                        <t t-esc="lines[4]"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br></br>
                    <table class="table" style="width: 100%; font-size: 14px;">
                        <tr style="border: 1px solid #ffffff;">
                            <td style="color: #A9A9A9; border: 1px solid #ffffff; width: 60%;">
                                <i>
                                    <!--Note :<br/>-->
                                    <t t-raw="so_tnc"/>
                                </i>
                            </td>
                            <td style="border: 1px solid #ffffff; vertical-align: top;">
                                Subtotal<br/><br/>
                                <t t-foreach="taxes" t-as="tax">
                                    <!-- <t t-esc="tax['name']"/> <t t-esc="tax['percentage']"/> %<br/> -->
                                    <t t-esc="tax['name']"/><br/>
                                </t>
                                <b><br/>Total</b><br/>
                                <br/><p style="background-color: #778899; color: white; padding: 5px;">Balance Due</p>
                            </td>
                            <td style="border: 1px solid #ffffff;text-align: right; vertical-align: top;">
                                <t t-esc="subtotal"/><br/><br/>
                                <t t-foreach="taxes" t-as="tax">
                                    <t t-esc="tax['amount']"/><br/>
                                </t>
                                <b><br/><t t-esc="balance_due"/></b><br/>
                                <br/><p style="background-color: #778899; color: white; padding: 5px;"><t t-esc="balance_due"/></p>
                            </td>
                        </tr>
                    </table>

<!--                    <p style="text-align: right; font-size: 14px;">-->
<!--                        <br/><img t-if="signature_image" t-att-src="signature_image" style="width: 200px; height: auto;" alt="Signature"/>-->
<!--                        <br/><t t-esc="signature_name"/><br/>-->
<!--                        National Sales Leader<br/>-->
<!--                        REXLINE ENGINEERING INDONESIA-->
<!--                    </p>-->
                    <div style="text-align: right; font-size: 14px; page-break-inside: avoid; display: block;">
                        <img t-if="signature_image" t-att-src="signature_image" style="width: 200px; height: auto;" alt="Signature"/>
                        <br/>
                        <t t-esc="signature_name"/><br/>
                        National Sales Leader<br/>
                        REXLINE ENGINEERING INDONESIA
                    </div>

                </div>
            </t>
        </template>

    </data>
</odoo>
