<odoo>
    <data>
        <menuitem id="travel_request_root" name="Travel Request" sequence="22"/>

        <record id="travel_request_form_view" model="ir.ui.view">
            <field name="name">travel.request.form.view</field>
            <field name="model">travel.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,process,done"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="id == False or state != 'draft'"/>
                        <button name="action_mark_done" string="Mark as Done" type="object" groups="sale_custome.hr_ga_custom_group,ga_custom.ga_custom_groups" class="oe_highlight" invisible="id == False or state != 'process'"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="id == False or state in ['draft', 'process']"/>
<!--                  <button name="action_create_quotation" string="Create Quotation" type="object" invisible="state != 'to_purchase' or is_purchase == False or id == False or state == 'cancel'"/>&ndash;&gt;-->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" invisible="id == False" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
<!--                                <field name="employee_id" required="1" readonly="state == 'done'"/>-->
                                <field name="freelance_id" string="Employee" widget="many2many_tags" required="1" readonly="state == 'done'"/>
                                <field name="purpose" string="Travel Purpose" required="1" readonly="state == 'done'"/>
                                <field name="so_number" string="SO Number" readonly="state == 'done'"/>
                                <field name="dest_from" string="From" required="1" readonly="state == 'done'"/>
                                <field name="dest_to" string="To" required="1" readonly="state == 'done'"/>
                                <field name="start_travel" required="1" readonly="state == 'done'"/>
                                <field name="end_travel" required="1" readonly="state == 'done'"/>
                            </group>
<!--                            <field name="partner_id" string="Customer" required="1"/>-->
                            <group>
                                <field name="job_id" required="1" readonly="state == 'done'"/>
<!--                                <field name="department_id" required="1" readonly="1"/>-->
                                <field name="department_id" required="1" readonly="state == 'done'"/>
                                <field name="destination" required="1"  readonly="state == 'done'"/>
                                <field name="request_date" required="1" readonly="1"/>
                                <field name="days" required="1" readonly="state == 'done'"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Estimated Budget">
                                <group string="Type of expense" name="type_expense" priority="1">
                                    <field name="transport_type" readonly="state == 'done'"/>
                                    <field name="vendor" readonly="state == 'done'"/>
                                    <field name="tickets" readonly="state == 'done'"/>
                                    <field name="hotels" readonly="state == 'done'"/>
                                    <field name="other" readonly="state == 'done'"/>
                                    <field name="payment_method" readonly="state == 'done'"/>
                                    <field name="tax" readonly="state == 'done'"/>
                                    <field name="total_prices" readonly="state == 'done'"/>
                                    <field name="description" string="Description" readonly="state == 'done'"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="seq_travel_req" model="ir.sequence">
            <field name="name">Travel Request</field>
            <field name="code">TREQ</field>
            <field name="prefix">TRA-REQ/%(y)s/000</field>
            <field name="company_id" eval="False"/>
        </record>


        <record id="travel_request_tree_view" model="ir.ui.view">
            <field name="name">travel.request.tree.view</field>
            <field name="model">travel.request</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                    <field name="freelance_id" widget="many2many_tags" string="Employee" required="1"/>
                    <field name="department_id" required="1"/>
                    <field name="request_date" required="1"/>
                    <field name="state" string="Status"
                           decoration-warning="state == 'draft'"
                           decoration-success="state == 'done'"
                           widget="badge"
                           optional="show"/>
<!--                    <field name="requisition_state" string="Requisition Status"/>-->
                </tree>
            </field>
        </record>

        <record id="action_travel_request" model="ir.actions.act_window">
            <field name="name">Travel Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">travel.request</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="travel_request_menuitem"
        name="Travel Request"
        sequence="5"
        parent="ga_management_menu"
        action="action_travel_request"
        />
    </data>
</odoo>