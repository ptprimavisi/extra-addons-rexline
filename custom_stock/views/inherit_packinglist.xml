<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_packinglist_view">
            <field name="name">packing.list.inherit</field>
            <field name="model">packing.list</field>
            <field name="inherit_id" ref="sale_custome.packing_list_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <button name="do_print_packing" type="object" class="btn-primary" string="Print Packing List"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="inherit_stockpicking_view">
            <field name="name">stockpicking.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="do_custom_print" type="object" string="Print" invisible="state not in ['assigned','done']"/>
                </header>
                <xpath expr="//button[@name='do_print_picking']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@type='action' and @groups='base.group_user' and @data-hotkey='o']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>